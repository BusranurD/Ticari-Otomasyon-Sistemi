@using MVCCommercialAutomation.Models.Classes
@model List<Employes>
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th>ID</th>
                <th>İsim</th>
                <th>Departman</th>
                <th>Satış Geçmişi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.EmployesID</td>
                <td>@x.EmployesName @x.EmployesSurname</td>
                <td>@x.Department.DepartmentName</td>
                <td><a href="/Department/DepartmentEmployesInvoice/@x.EmployesID">Satış Geçmişi</a></td>
            </tr>
            }
        </tbody>
    </table>