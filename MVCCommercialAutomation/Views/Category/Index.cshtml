@using MVCCommercialAutomation.Models.Classes;
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.CategoryName</td>
            <td><a href="/Category/CategoryDelete/@c.CategoryID" class=" btn btn-danger">Sil</a></td>
            <td><a href="/Category/CategoryGet/@c.CategoryID" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model,page => Url.Action("Index", new { page }),
new PagedListRenderOptions { LiElementClasses = new List<string> { "page-list" } })
<a href="/Category/CategoryAdd" class="btn btn-success">Kategori Ekle</a>

