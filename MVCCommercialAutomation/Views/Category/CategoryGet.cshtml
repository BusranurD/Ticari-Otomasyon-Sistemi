@model MVCCommercialAutomation.Models.Classes.Category
@{
    ViewBag.Title = "CategoryGet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <br />
<h2>Kategori Güncelleme</h2>
<br />
@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x=>x.CategoryName)
        @Html.TextBoxFor(x=>x.CategoryName, new { @class = "form-control" })
        @Html.HiddenFor(x=>x.CategoryID)
    </div>
    <br />
    <button class="btn btn-default" style="background-color:khaki">Güncelle</button>
}
