@model MVCCommercialAutomation.Models.Classes.Product
@{
    ViewBag.Title = "ProductGet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Ürün Güncelleme</h2>
<br />
@using (Html.BeginForm("ProductUpdate", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.ProductID)
        @Html.LabelFor(x => x.ProductName)
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Trademark)
        @Html.TextBoxFor(x => x.Trademark, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Stock)
        @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.PurchasePrice)
        @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Price)
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.CategoryId)
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.prodct, new { @class = "form-control" })
        @* @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })*@
        <br />
        @Html.LabelFor(x => x.ProductPic)
        @Html.TextBoxFor(x => x.ProductPic, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Checking)
        @Html.TextBoxFor(x => x.Checking, new { @class = "form-control" })
        <br />
        <button class="btn btn-default" style="background-color:khaki">Güncelle</button>
        </div>
        }



